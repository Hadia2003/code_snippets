pipeline {
  agent any

  stages {
    stage('Checkout Flask App') {
      steps {
        git url: 'https://github.com/Hadia2003/code_snippets.git', branch: 'master'
      }
    }

    stage('Build & Deploy Flask App') {
      steps {
        dir('Python/Flask_Blog/04-Database') {
          sh '''
            docker-compose -p flaskblog_ci -f docker-compose.yml down -v --remove-orphans || true
            docker-compose -p flaskblog_ci -f docker-compose.yml up -d --build --force-recreate
          '''
        }
      }
    }

    stage('Wait for Flask to be Ready') {
      steps {
        echo 'Waiting 60 seconds for Flask app to startâ€¦'
        sh 'sleep 60'
      }
    }

    stage('Checkout Selenium Test Suite') {
      steps {
        dir('selenium_testcases') {
          // wipe out anything left over from previous runs
          deleteDir()
          // clone your test repo
          git url: 'https://github.com/Hadia2003/selenium_testcases.git', branch: 'main'
        }
      }
    }

    stage('Run Selenium Tests') {
      steps {
        dir('selenium_testcases') {
          script {
            // run as the same UID as Jenkins, not root
            docker.image('markhobson/maven-chrome:latest')
                  .inside('--network host --shm-size=2g') {
              sh 'mvn -B clean test'
            }
          }
        }
      }
    }
  }

  post {
    always {
      // pick up Surefire XML reports
      junit(
        testResults: 'selenium_testcases/target/surefire-reports/*.xml',
        allowEmptyResults: true,
        keepLongStdio: false
      )

      // show container status for debug
      dir('Python/Flask_Blog/04-Database') {
        sh 'docker-compose -p flaskblog_ci -f docker-compose.yml ps || true'
      }
    }
  }
}





