pipeline {
  agent any

  stages {
    stage('Clone Flask App') {
      steps {
        git branch: 'master', url: 'https://github.com/Hadia2003/code_snippets.git'
      }
    }

    stage('Clean Existing Containers') {
      steps {
        dir('Python/Flask_Blog/04-Database') {
          sh 'docker-compose -p flaskblog_ci -f docker-compose.yml down --remove-orphans -v'
        }
        // in case any stray containers still exist
        sh '''
          docker rm -f flaskblog_ci_web      || true
          docker rm -f flaskblog_ci_db       || true
        '''
      }
    }

    stage('Build and Start Compose Stack') {
      steps {
        dir('Python/Flask_Blog/04-Database') {
          sh 'docker-compose -p flaskblog_ci -f docker-compose.yml up -d --build --force-recreate'
        }
      }
    }

    stage('Wait for App to Start') {
      steps {
        echo 'Waiting 60 seconds for Flask app to come up...'
        sh 'sleep 60'
      }
    }

    stage('Clone Selenium Test Suite') {
      steps {
        dir('selenium_testcases') {
          deleteDir()
          git branch: 'main', url: 'https://github.com/Hadia2003/selenium_testcases.git'
        }
      }
    }

    stage('Run Selenium Tests') {
      steps {
        dir('selenium_testcases') {
          script {
            docker.image('markhobson/maven-chrome:latest')
              .inside('-u root --network host --shm-size=2g') {
                sh 'mvn -B clean test'
              }
          }
        }
      }
    }
  }

  post {
    always {
      // publish your Selenium JUnit XML reports
      junit testResults: 'selenium_testcases/target/surefire-reports/*.xml',
            allowEmptyResults: true,
            keepLongStdio: false

      // and show the status of your Flask containers
      script {
        dir('Python/Flask_Blog/04-Database') {
          sh 'docker-compose -p flaskblog_ci -f docker-compose.yml ps || true'
        }
      }
    }
  }
}


