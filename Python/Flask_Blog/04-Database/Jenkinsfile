pipeline {
  agent any

  stages {
    stage('Checkout Flask App') {
      steps {
        // your existing repo
        git url: 'https://github.com/Hadia2003/code_snippets.git', branch: 'master'
      }
    }

    stage('Build & Deploy Flask App') {
      steps {
        dir('Python/Flask_Blog/04-Database') {
          sh '''
            docker-compose -p flaskblog_ci -f docker-compose.yml down -v --remove-orphans || true
            docker-compose -p flaskblog_ci -f docker-compose.yml up -d --build --force-recreate
          '''
        }
      }
    }

    stage('Wait for Flask to be Ready') {
      steps {
        echo 'Waiting 60 seconds for Flask app to startâ€¦'
        sh 'sleep 60'
      }
    }

    stage('Checkout Selenium Test Suite') {
      steps {
        dir('selenium_testcases') {
          deleteDir()  // clean out any old root-owned files
          git url: 'https://github.com/Hadia2003/selenium_testcases.git', branch: 'main'
        }
      }
    }

    stage('Run Selenium Tests') {
      steps {
        dir('selenium_testcases') {
          script {
            // grab the host Jenkins user's UID/GID so the container writes with correct permissions
            def uid = sh(script: 'id -u', returnStdout: true).trim()
            def gid = sh(script: 'id -g', returnStdout: true).trim()

            docker.image('markhobson/maven-chrome:latest')
                  .inside("-u ${uid}:${gid} --network host --shm-size=2g") {
              // run your Maven tests
              sh 'mvn -B clean test'
            }
          }
        }
      }
    }
  }

  post {
    always {
      // publish test results (allowEmptyResults avoids "no such file" errors)
      junit testResults: 'selenium_testcases/target/surefire-reports/*.xml',
            allowEmptyResults: true,
            keepLongStdio: false

      // show your Flask container status for debugging
      dir('Python/Flask_Blog/04-Database') {
        sh 'docker-compose -p flaskblog_ci -f docker-compose.yml ps'
      }
    }
  }
}

