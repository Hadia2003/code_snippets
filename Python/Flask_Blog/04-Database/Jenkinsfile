pipeline {
  agent any

  // Don’t do the default checkout — we’ll do it ourselves below
  options {
    skipDefaultCheckout()
  }

  environment {
    MVN_REPO = "${env.WORKSPACE}/.m2/repository"
  }

  stages {
    stage('Checkout Flask App') {
      steps {
        script {
          // clean up any stray root-owned files
          sh "chmod -R u+rwX ${env.WORKSPACE}/app || true"
        }
        dir('app') {
          deleteDir()
          git url: 'https://github.com/Hadia2003/code_snippets.git', branch: 'master'
        }
      }
    }

    stage('Build & Deploy Flask App') {
      steps {
        dir('app/Python/Flask_Blog/04-Database') {
          sh '''
            docker-compose -p flaskblog_ci -f docker-compose.yml down -v || true
            docker-compose -p flaskblog_ci -f docker-compose.yml up -d --build --force-recreate
          '''
        }
      }
    }

    stage('Checkout Selenium Tests') {
      steps {
        script {
          sh "chmod -R u+rwX ${env.WORKSPACE}/selenium_testcases || true"
        }
        dir('selenium_testcases') {
          deleteDir()
          git url: 'https://github.com/Hadia2003/selenium_testcases.git', branch: 'main'
        }
      }
    }

    stage('Run Selenium Tests') {
      steps {
        script {
          // capture Jenkins user IDs
          def uid = sh(script: 'id -u', returnStdout: true).trim()
          def gid = sh(script: 'id -g', returnStdout: true).trim()

          // run Maven+Chrome as Jenkins user so 'target/' is owned correctly
          docker.image('markhobson/maven-chrome:latest').inside(
            "--user ${uid}:${gid} --shm-size=1g -v ${MVN_REPO}:/root/.m2/repository"
          ) {
            dir('selenium_testcases') {
              sh 'mvn -B -Dmaven.repo.local=${MVN_REPO} clean test'
            }
          }
        }
      }
      post {
        always {
          // publish JUnit reports if they exist
          junit allowEmptyResults: true, testResults: 'selenium_testcases/target/surefire-reports/*.xml'
        }
      }
    }
  }

  post {
    always {
      // never fail here if the compose file is gone
      script {
        dir('app/Python/Flask_Blog/04-Database') {
          sh 'docker-compose -p flaskblog_ci -f docker-compose.yml ps || true'
        }
      }
    }
  }
}


